<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel Margin="20">
            <TextBlock Height="100" Name="MovieOverview" Text=""/>
            <Label Content="Input Movie Title"/>
            <TextBox Name="Title" Text="{Binding Title}"  Margin="0 0 0 10"/>
            <Label Content="Input Movie Genre"/>
            <TextBox Name="Genre" Text="{Binding Genre}"  Margin="0 0 0 10"/>
            <Label Content="Input Movie Length in Minutes"/>
            <TextBox Name="Length" Text="{Binding Length}"  Margin="0 0 0 10"/>
            <Button Content="Add Movie" Command="{Binding AddMovieCommand}" Click="AddMovie_Click"/>
        </StackPanel>
    </Grid>
</Window>
